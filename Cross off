<script type="text/javascript">
function TicTacToe()
{
	this.board = new Array(5);

    // row 1
    this.board[0]=new Array(5);
    this.board[0][1] = "";
    this.board[0][2] = "";
    this.board[0][3] = "";
	this.board[0][4] = "";
	this.board[0][5] = "";


   // row 2
   this.board[1]=new Array(5);
   this.board[1][1] = "";
   this.board[1][2] = "";
   this.board[1][3] = "";
   this.board[1][4] = "";
   this.board[1][5] = "";

   // row 3
   this.board[2]=new Array(5);
   this.board[2][1] = "";
   this.board[2][2] = "";
   this.board[2][3] = "";
   this.board[2][4] = "";
   this.board[2][5] = "";
    // row 4
   this.board[3]=new Array(5);
   this.board[3][1] = "";
   this.board[3][2] = "";
   this.board[3][3] = "";
   this.board[3][4] = "";
   this.board[3][5] = "";
    // row 5
   this.board[4]=new Array(5);
   this.board[4][1] = "";
   this.board[4][2] = "";
   this.board[4][3] = "";
   this.board[4][4] = "";
   this.board[4][5] = "";
   
   
	var s1 = this.board[0][1];
    var s2 = this.board[0][2]; 
    var s3 = this.board[0][3];
	var s4 = this.board[0][4];
    var s5 = this.board[0][5];
    var s6 = this.board[1][1]; 
    var s7 = this.board[1][2]; 
    var s8 = this.board[1][3];
	var s9 = this.board[1][4];
	var s10 = this.board[1][5];
    var s11 = this.board[2][1];
    var s12 = this.board[2][2];
    var s13 = this.board[2][3];
	var s14 = this.board[2][4];
    var s15 = this.board[2][5];
	var s16 = this.board[3][1];
	 var s17 = this.board[3][2];
	 var s18 = this.board[3][3];
	 var s19 = this.board[3][4];
	var s20 = this.board[3][5];
	var s21 = this.board[4][1];
	var s22 = this.board[4][2];
	var s23 = this.board[4][3];
	var s24 = this.board[4][4];
	var s25 = this.board[4][5];			   
	
	this.toHTML= function()
	
	{
		var myHTML = "";
		myHTML += '<table id="gameBoard" >';
		myHTML += '<tr><td id="s1">' + s1 + '</td>';
		myHTML += '<td id="s2">' + s2 + '</td>';
		myHTML += '<td id="s3">' + s3 + '</td>';
		myHTML += '<td id="s4">' + s4 + '</td>';
		myHTML += '<td id="s5">' + s5 + '</td></tr>';
		
		myHTML += '<tr><td id="s6">' + s6 + '</td>';
		myHTML += '<td id="s7">' + s7 + '</td>';
		myHTML += '<td id="s8">' + s8 + '</td>';
		myHTML += '<td id="s9">' + s9 + '</td>';
		myHTML += '<td id="s10">' + s10 + '</td></tr>';
		
		myHTML += '<tr><td id="s11">' + s11 + '</td>';
		myHTML += '<td id="s12">' + s12 + '</td>';
		myHTML += '<td id="s13">' + s13 + '</td>';
		myHTML += '<td id="s14">' + s14 + '</td>';
		myHTML += '<td id="s15">' + s15 + '</td></tr>';
		
		myHTML += '<tr><td id="s16">' + s16 + '</td>';
		myHTML += '<td id="s17">' + s17 + '</td>';
		myHTML += '<td id="s18">' + s18 + '</td>';
		myHTML += '<td id="s19">' + s19 + '</td>';
		myHTML += '<td id="s20">' + s20 + '</td></tr>';
		
		myHTML += '<tr><td id="s21">' + s21 + '</td>';
		myHTML += '<td id="s22">' + s22 + '</td>';
		myHTML += '<td id="s23">' + s23 + '</td>';
		myHTML += '<td id="s24">' + s24 + '</td>';
		myHTML += '<td id="s25">' + s25 + '</td></tr>';
		
		myHTML += '</table>';
		return myHTML;
		 
	}
}


